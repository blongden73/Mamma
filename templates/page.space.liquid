<div class="m-page-header flex space-page white-bg">
  <div class="header-left">
    <div class="header-inner">
      <h1><span class="underline">The Space</span></h1>
    </div>
    {% assign page_image = page.metafields.airf.page_image %}
    {% if page_image and page_image != '&nbsp' %}
    <img src="{{ page_image }}" />
    {% endif %}
  </div>
  <div class="header-right">
    <div class="header-inner">
      <div class="header-inner-content">
        <h1>A place to relect,</h1>
        <h1><span>enjoy & relax</span></h1>
      </div>
    </div>
  </div>
</div>
<div class="video-section page-width">
  <h1>Online wellness</h1>
  <div class="video-wrapper ">
    <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/inpok4MKVLM?controls=0" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </div>
</div>

<div class="watch">
  something here
  {% for article in blog.articles %}
    <h2>{{ article.title }}</h2>
  {% endfor %}
  something else here?
</div>


{% schema %}
{
  "name": "Blog pages",
  "settings": [
    {
      "type": "checkbox",
      "id": "blog_show_author",
      "label": "Show author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_show_date",
      "label": "Show date",
      "default": true
    }
  ]
}
{% endschema %}







