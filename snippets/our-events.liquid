<div class="m-calendar events {% for events in collections.all.products %}{% if events.tags contains 'Events' or events.tags contains 'Retreats' %} hasEvents {% endif %}{% endfor %}">
  <div class="page-width">
    <div class="m-calendar-wrapper">
      <div class="flex">
        <h1>Upcoming Events</h1>
        <ul>

        </ul>
      </div>
      <ul>
        <li class="no-events">There are currently no events, please check back soon. ♥</li>
        {% for events in collections.all.products %}
          {% assign tags = events.tags %}
          {% assign practition = events.metafields.airf.practition %}
          {% assign level = events.metafields.airf.level %}
          {% assign pregnancy_ = events.metafields.airf.pregnancy_ %}
          {% assign speed = events.metafields.airf.speed %}
          {% assign space = events.metafields.airf.space %}
          {% assign type = events.metafields.airf.type %}
          {% assign practice = events.metafields.airf.practice %}
          {% assign date = product.metafields.airf.date %}

          {% if tags contains 'Events' or tags contains 'Retreats' %}
            <li>
              <span class="m-event-title">{{events.title}}</span>
              <span class="m-event-meta">{% if date %}{{ date | date: "%Y-%m-$d" }}{% endif %}{% if practition %}{{practition}} • {% endif %}{% if speed %}{{speed}} • {% endif %}{% if space %}{{space}} • {% endif %}{% if type %}{{type}} • {% endif %}{% if practice %}{{practice}}{% endif %}{% if pregnancy_  == "true" %} • Pregnancy{% endif %} <a href="{{events.url}}">Read More</a></span>
              <a href="{{events.url}}"><div class="m-button">Book now</div></a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
